<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.karat.instagram.Home.HomeActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout_top_fragmentProfile">

        <include layout="@layout/snippet_top_profilebar"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relLayout_middle_fragmentProfile"
        android:layout_below="@+id/relLayout_top_fragmentProfile">

        <include layout="@layout/layout_center_profile"/>


    </RelativeLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar_profile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <!-- Bottom Navigation View -->
    <include layout="@layout/layout_bottom_navigation_view"/>




</RelativeLayout>
